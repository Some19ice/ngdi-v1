{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app/api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    },
    "app/auth/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}
