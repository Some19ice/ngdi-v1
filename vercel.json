{
  "version": 2,
  "buildCommand": "node vercel-build.js",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_STATIC_GENERATION_BAILOUT": "true"
  },
  "functions": {
    "app/api/**/*": {
      "memory": 1024,
      "maxDuration": 10
    },
    "app/auth/**/*": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://ngdi-api.vercel.app/api/:path*"
    }
  ],
  "ignoreCommand": "echo 'Ignoring build errors for auth pages'",
  "headers": [
    {
      "source": "/auth/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, max-age=0"
        }
      ]
    }
  ]
}
