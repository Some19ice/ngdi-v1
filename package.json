{
  "name": "ngdi-portal",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "next dev",
    "dev:api": "npm run dev -w packages/api",
    "build": "npm run build:web && npm run build:api",
    "build:web": "prisma generate && next build",
    "build:api": "npm run build -w packages/api",
    "build:vercel": "prisma generate && next build",
    "prebuild:api": "mkdir -p packages/api/dist/api",
    "start": "concurrently \"npm run start:web\" \"npm run start:api\"",
    "start:web": "next start",
    "start:api": "npm run start -w packages/api",
    "lint": "next lint",
    "clean": "rm -rf .next node_modules/.cache",
    "clean:vercel": "rm -rf .next node_modules/.cache .vercel/output",
    "db:push": "prisma db push",
    "db:init": "ts-node --project scripts/tsconfig.json scripts/init-db.ts",
    "test": "npm run test:web && npm run test:api",
    "test:web": "playwright test",
    "test:api": "npm run test -w packages/api",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:auth": "playwright test tests/auth.test.ts",
    "test:coverage": "playwright test --reporter=html",
    "test:analyze": "ts-node scripts/analyze-test-results.ts",
    "format": "prettier --write ."
  },
  "dependencies": {
