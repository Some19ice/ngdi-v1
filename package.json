{
  "name": "ngdi-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@10.2.3",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "turbo run dev",
    "dev:safe": "node packages/api/scripts/check-port.js 3001 --kill && turbo run dev",
    "dev:api-safe": "npm run dev:safe -w packages/api",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "npm run db:push -w packages/db",
    "db:generate": "npm run db:generate -w packages/db",
    "db:studio": "npm run db:studio -w packages/db",
    "db:seed": "npm run db:seed -w packages/db",
    "db:reset": "npm run db:reset -w packages/db",
    "db:migrate": "npm run db:migrate -w packages/db",
    "check-port": "node packages/api/scripts/check-port.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.49.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
