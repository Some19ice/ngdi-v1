{
  "name": "@ngdi/api",
  "version": "0.1.0",
  "description": "Hono backend for NGDI Portal",
  "main": "dist/index.js",
  "scripts": {
    "predev": "node scripts/check-port.js 3001 --kill",
    "dev": "tsx watch src/index.ts",
    "dev:safe": "npm run predev && npm run dev",
    "build": "tsup",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf node_modules dist",
    "check-port": "node scripts/check-port.js"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/swagger-ui": "^0.2.2",
    "@hono/zod-openapi": "^0.19.2",
    "@hono/zod-validator": "^0.1.11",
    "@ngdi/common": "0.1.0",
    "@ngdi/db": "0.1.0",
    "@ngdi/types": "0.1.0",
    "@ngdi/utils": "0.1.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "hono": "^4.7.5",
    "ioredis": "^5.3.2",
    "jose": "^5.2.3",
    "jsonwebtoken": "^9.0.2",
    "limiter": "^3.0.0",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "undici": "^7.4.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20.17.23",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.49.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "tsup": "^7.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}