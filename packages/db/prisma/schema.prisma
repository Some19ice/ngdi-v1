generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


/// Authentication account information for OAuth providers
model Account {
  /// Unique identifier for the account
  id                String  @id @default(cuid())
  /// Reference to the user who owns this account
  userId            String
  /// Type of the account (oauth, email, etc.)
  type              String
  /// OAuth provider name
  provider          String
  /// Account ID from the provider
  providerAccountId String
  /// OAuth refresh token
  refresh_token     String?
  /// OAuth access token
  access_token      String?
  /// Token expiration timestamp
  expires_at        Int?
  /// OAuth token type
  token_type        String?
  /// OAuth scope
  scope             String?
  /// OAuth ID token
  id_token          String?
  /// OAuth session state
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

/// User session information
model Session {
  /// Unique identifier for the session
  id           String   @id @default(cuid())
  /// Session token used for authentication
  sessionToken String   @unique
  /// Reference to the user who owns this session
  userId       String
  /// Session expiration timestamp
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

/// User account information
model User {
  /// Unique identifier for the user
  id            String     @id @default(uuid())
  /// User's full name
  name          String?
  /// User's email address
  email         String     @unique
  /// Timestamp of email verification
  emailVerified DateTime?
  /// User's profile image URL
  image         String?
  /// Hashed password for local authentication
  password      String
  /// User's role in the system (legacy field)
  role          UserRole   @default(USER)
  /// Reference to the user's custom role
  roleId        String?
  /// User's organization name
  organization  String?
  /// User's department within the organization
  department    String?
  /// User's contact phone number
  phone         String?

  accounts      Account[]
  sessions      Session[]
  metadata      Metadata[]
  drafts        Draft[]
  userPermissions UserPermission[]
  activityLogs  ActivityLog[]
  customRole    Role?          @relation(fields: [roleId], references: [id])
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([roleId])
}

/// User roles for access control
enum UserRole {
  /// Regular user with basic access
  USER
  /// System administrator with full access
  ADMIN
  /// Node officer with specific privileges
  NODE_OFFICER
}

/// Geospatial metadata information following NGDI standards
model Metadata {
  /// Unique identifier for the metadata entry
  id                      String   @id @default(uuid())

  // Core metadata fields (always required)
  /// Title of the dataset
  title                   String
  /// Name of the dataset (more descriptive title)
  dataName                String
  /// Type of data (Raster, Vector, Table)
  dataType                String
  /// Abstract/description of the dataset
  abstract               String   @db.Text
  /// Purpose of the dataset
  purpose                String   @db.Text
  /// Date when the dataset was produced
  productionDate          String
  /// Organization name
  organization            String
  /// Author of the dataset
  author                  String
  /// Categories of the dataset
  categories             String[] @default([])
  /// Framework type
  frameworkType          String
  /// URL to the thumbnail image
  thumbnailUrl           String
  /// Name of the image file
  imageName              String
  /// Start date of the dataset
  dateFrom               String
  /// End date of the dataset
  dateTo                 String
  /// Frequency of updates (Monthly, Quarterly, etc.)
  updateFrequency         String
  /// Validation status
  validationStatus       String?
  /// Completion status (Complete or Incomplete)
  assessment              String?

  // Spatial information
  /// Unit system for coordinates (DD or DMS)
  coordinateUnit          String   @default("DD")
  /// Southernmost latitude value
  minLatitude             Float    @default(0)
  /// Westernmost longitude value
  minLongitude            Float    @default(0)
  /// Northernmost latitude value
  maxLatitude             Float    @default(0)
  /// Easternmost longitude value
  maxLongitude            Float    @default(0)
  /// Coordinate system used
  coordinateSystem       String
  /// Projection used
  projection             String
  /// Scale of the dataset
  scale                  Int
  /// Resolution of the dataset
  resolution             String?

  // Location information (stored as JSON for flexibility)
  /// Location information including country, state, LGA, etc.
  locationInfo           Json?

  // File information
  /// File format
  fileFormat             String
  /// File size in bytes
  fileSize              BigInt?
  /// Number of features
  numFeatures           Int?

  // Quality information (stored as JSON for flexibility)
  /// Quality information including accuracy, completeness, etc.
  qualityInfo            Json?

  // Distribution information
  /// Distribution format
  distributionFormat     String
  /// Access method
  accessMethod           String
  /// Download URL
  downloadUrl           String?
  /// API endpoint
  apiEndpoint           String?
  /// License type
  licenseType           String
  /// Usage terms
  usageTerms             String
  /// Attribution requirements
  attributionRequirements String
  /// Access restrictions
  accessRestrictions     String[] @default([])

  // Contact information (stored as JSON for flexibility)
  /// Contact information including contact person, email, etc.
  contactInfo            Json?

  // Metadata reference information (stored as JSON for flexibility)
  /// Metadata reference information including creation date, review date, etc.
  metadataReferenceInfo  Json?

  // Data quality information (stored as JSON for flexibility)
  /// Data quality information including consistency, completeness, etc.
  dataQualityInfo        Json?

  // Data processing information (stored as JSON for flexibility)
  /// Data processing information including processing steps, software version, etc.
  dataProcessingInfo     Json?

  // Distribution details (stored as JSON for flexibility)
  /// Distribution details including distributor, fees, etc.
  distributionDetails    Json?

  // Legacy fields (for backward compatibility)
  /// Legacy fields from original Metadata model
  legacyFields           Json?

  // Fundamental Datasets (stored as JSON)
  /// Information about fundamental dataset types
  fundamentalDatasets     Json?

  /// Reference to the user who created this entry
  userId                 String
  user                   User     @relation(fields: [userId], references: [id])

  /// Creation timestamp
  createdAt              DateTime @default(now())
  /// Last update timestamp
  updatedAt              DateTime @updatedAt

  // Indexes for common query patterns
  @@index([userId])
  @@index([title])
  @@index([dataName])
  @@index([dataType])
  @@index([organization])
  @@index([frameworkType])
  @@index([fileFormat])
  @@index([validationStatus])
  @@index([assessment])
  @@index([dateFrom, dateTo])
  @@index([productionDate])
  @@index([updateFrequency])
  @@index([categories])
}

/// Token for email verification and password reset
model VerificationToken {
  /// Email or identifier to verify
  identifier String
  /// Verification token
  token      String   @unique
  /// Token expiration timestamp
  expires    DateTime

  @@unique([identifier, token])
}

/// System settings for the application
model Settings {
  /// Unique identifier for the settings record
  id                      String   @id
  /// Site name
  siteName                String   @default("NGDI Portal")
  /// Site description
  siteDescription         String   @default("Geospatial Data Infrastructure Portal")
  /// Support email address
  supportEmail            String   @default("support@example.com")
  /// Maximum upload size in MB
  maxUploadSize           Int      @default(10)
  /// Default language
  defaultLanguage         String   @default("en")
  /// Maintenance mode flag
  maintenanceMode         Boolean  @default(false)
  /// Registration enabled flag
  enableRegistration      Boolean  @default(true)
  /// Email verification required flag
  requireEmailVerification Boolean  @default(true)
  /// Metadata validation required flag
  metadataValidation      Boolean  @default(true)
  /// Auto backup enabled flag
  autoBackup              Boolean  @default(false)
  /// Backup frequency (daily, weekly, monthly)
  backupFrequency         String   @default("weekly")
  /// Storage provider (local, s3, etc.)
  storageProvider         String   @default("local")
  /// API rate limit per minute
  apiRateLimit            Int      @default(100)
  /// Last update timestamp
  updatedAt               DateTime @default(now()) @updatedAt
}

/// Model for storing form drafts
model Draft {
  /// Unique identifier for the draft
  id          String   @id @default(cuid())
  /// Reference to the user who owns this draft
  userId      String
  /// Title of the draft
  title       String   @default("Untitled Draft")
  /// Draft data as JSON
  data        Json
  /// Last updated timestamp
  lastUpdated String
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// User who owns this draft
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}



/// Custom role model for role-based access control
model Role {
  /// Unique identifier for the role
  id          String   @id @default(cuid())
  /// Name of the role
  name        String   @unique
  /// Description of the role
  description String?
  /// Whether this is a system role that cannot be deleted
  isSystem    Boolean  @default(false)
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// Last update timestamp
  updatedAt   DateTime @updatedAt

  /// Users with this role
  users       User[]
  /// Permissions assigned to this role
  rolePermissions RolePermission[]
}

/// Permission model for granular access control
model Permission {
  /// Unique identifier for the permission
  id          String   @id @default(cuid())
  /// Name of the permission
  name        String   @unique
  /// Description of the permission
  description String?
  /// Action part of the permission (create, read, update, delete, etc.)
  action      String
  /// Subject part of the permission (user, metadata, system, etc.)
  subject     String
  /// Optional conditions for the permission as JSON
  conditions  Json?
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// Last update timestamp
  updatedAt   DateTime @updatedAt

  /// Roles that have this permission
  rolePermissions RolePermission[]
  /// Users that have this permission directly
  userPermissions UserPermission[]
  /// Permission groups that include this permission
  permissionGroupItems PermissionGroupItem[]

  @@unique([action, subject])
  @@index([action, subject])
}

/// Junction table for role-permission relationships
model RolePermission {
  /// Unique identifier for the role-permission relationship
  id          String   @id @default(cuid())
  /// Reference to the role
  roleId      String
  /// Reference to the permission
  permissionId String
  /// Creation timestamp
  createdAt   DateTime @default(now())

  /// Role that has this permission
  role        Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  /// Permission assigned to the role
  permission  Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
  @@index([roleId])
  @@index([permissionId])
}

/// Junction table for user-permission relationships (direct permissions)
model UserPermission {
  /// Unique identifier for the user-permission relationship
  id          String   @id @default(cuid())
  /// Reference to the user
  userId      String
  /// Reference to the permission
  permissionId String
  /// Whether the permission is granted or denied
  granted     Boolean  @default(true)
  /// Optional conditions for the permission as JSON
  conditions  Json?
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// Expiration timestamp for temporary permissions
  expiresAt   DateTime?

  /// User that has this permission
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  /// Permission assigned to the user
  permission  Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([userId, permissionId])
  @@index([userId])
  @@index([permissionId])
}

/// Permission group model for organizing permissions
model PermissionGroup {
  /// Unique identifier for the permission group
  id          String   @id @default(cuid())
  /// Name of the permission group
  name        String   @unique
  /// Description of the permission group
  description String?
  /// Creation timestamp
  createdAt   DateTime @default(now())
  /// Last update timestamp
  updatedAt   DateTime @updatedAt

  /// Permissions in this group
  permissionGroupItems PermissionGroupItem[]
}

/// Junction table for permission-group relationships
model PermissionGroupItem {
  /// Unique identifier for the permission-group relationship
  id          String   @id @default(cuid())
  /// Reference to the permission group
  groupId     String
  /// Reference to the permission
  permissionId String
  /// Creation timestamp
  createdAt   DateTime @default(now())

  /// Permission group that includes this permission
  group       PermissionGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  /// Permission included in the group
  permission  Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([groupId, permissionId])
  @@index([groupId])
  @@index([permissionId])
}

/// Activity log model for activity-based permissions
model ActivityLog {
  /// Unique identifier for the activity log entry
  id          String   @id @default(uuid())
  /// Reference to the user who performed the action
  userId      String
  /// Action performed (create, read, update, delete, etc.)
  action      String
  /// Subject of the action (user, metadata, system, etc.)
  subject     String
  /// Optional ID of the subject
  subjectId   String?
  /// Optional metadata about the activity as JSON
  metadata    Json?
  /// IP address of the client
  ipAddress   String?
  /// User agent of the client
  userAgent   String?
  /// Creation timestamp
  createdAt   DateTime @default(now())

  /// User who performed the action
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action, subject])
  @@index([createdAt])
}


